@model Cumulative_1.Models.Course

<div id="containershow">
    <nav>
        <a class="navlink" href="/CoursePage/Show/@Model.CourseId">Back</a>
    </nav>
    <h2>New Course</h2>
    <form method="POST" action="/CoursePage/Update/@Model.CourseId">

        <div class="inputrow">
            <label for="CourseCode">Course Code:</label>
            <input type="text" id="CourseCode" name="CourseCode" value="@Model.CourseCode" />
        </div>

        <div class="inputrow">
            <label for="TeacherId">Teacher Id:</label>
            <input type="number" id="TeacherId" name="TeacherId" value="@Model.TeacherId" />
        </div>

        <div class="inputrow">
            <label for="CourseStartDate"> Course Start Date:</label>
            <input type="date" id="CourseStartDate" name="CourseStartDate" value="@Model.CourseStartDate" />
        </div>

        <div class="inputrow">
            <label for="CourseFinishDate">Course Finish Date:</label>
            <input type="date" id="CourseFinishDate" name="CourseFinishDate" value="@Model.CourseFinishDate" required />
        </div>

        <div class="inputrow">
            <label for="CourseName"> Course Name:</label>
            <input type="text" id="CourseName" name="CourseName" value="@Model.CourseName" />
        </div>

        <div class="inputrow">
            <input type="submit" value="Update Course" />
        </div>
    </form>
</div>